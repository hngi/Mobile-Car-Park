<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mv_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/fragment_my_vehicle">

    <ImageView
        android:id="@+id/mv_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/vehicle"
        app:layout_constraintBottom_toTopOf="@+id/mv_recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/car_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mv_recyclerView"
        android:layout_width="371dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mv_image_view" />

    <TextView
        android:id="@+id/new_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No Vehicles added. Click + below to add a Vehicle"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/mv_recyclerView"
        app:layout_constraintEnd_toEndOf="@+id/mv_recyclerView"
        app:layout_constraintStart_toStartOf="@+id/mv_recyclerView"
        app:layout_constraintTop_toTopOf="@+id/mv_recyclerView" />

</androidx.constraintlayout.widget.ConstraintLayout>